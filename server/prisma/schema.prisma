generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Tramo{
  id Int @id @default(autoincrement())
  inicio String @db.VarChar(100)
  destino String @db.VarChar(100)
  observaciones Observacion[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Elemento{
  id Int @id @default(autoincrement())
  tipo String @db.VarChar(50) 
  nombre String @db.VarChar(100)
  descripcion String? @db.Text
  observaciones Observacion[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Observacion{
  id Int @id @default(autoincrement())
  codigo String @unique @db.VarChar(50)
  kilometro String @db.VarChar(50)
  lat Float?
  lng Float?
  cuerpo String @db.VarChar(20)
  carril String @db.VarChar(20)
  fecha DateTime
  observacion String @db.Text
  observacion_corta String @db.VarChar(255)
  recomendacion String @db.Text
  estado String @db.VarChar(50)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  tramoId Int
  tramo Tramo @relation(fields: [tramoId], references: [id])

  elementoId Int
  elemento Elemento @relation(fields: [elementoId], references: [id])

  imagenes Imagen[]
}

model Imagen{
  id Int @id @default(autoincrement())
  nombre String @db.VarChar(100)
  ruta String @db.VarChar(255)

  observacionId Int
  observacion Observacion @relation(fields: [observacionId], references: [id], onDelete: Cascade)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

